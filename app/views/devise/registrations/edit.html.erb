<div class="container">
  <div class="row ">
    <h2>Welcome <%= @user.email %></h2>
    <div class="col-md-12">
      <div class="col-md-4 profilebox">
        <table class="table">
          <thead>
            <tr>
              <th>Last 10 debates generated</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <!-- Note: Check out how to do a loop within the user controller for pulling the last 10 debates for that user -->
              <% @user.debates.each do |debate| %>
              <td><%= debate.topic %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-4 profilebox">
        <table class="table">
          <thead>
            <tr>
              <th>Last 10 debates generated</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <!-- Note: Check out how to do a loop within the user controller for pulling the last 10 debates they are following -->
              <% @user.debates.each do |debate| %>
              <% if debate.present? %>
              <td><%= debate.topic %></td>
              <% else %>
              <td><%= puts "Come and join in some debates" %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-4 profilebox">
        <!-- <h4>This will be a live feed of all recent submissions on debates I am apart of</h4> -->
        <table class="table">
          <thead>
            <tr>
              <th>My recent debate submissions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <!-- Note: Check out how to do a loop within the user controller for pulling the last 10 debates the user has commented on -->
              <% @user.submissions.each do |submission| %>
              <td><%= submission.content  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row">

      <div class="col-md-4 profilebox">
        <%= render 'partials/editprofile' %>
      </div>

      <div class="col-md-4 profilebox votecompass">
        This is where the votecompass API will go
      </div>

      <div class="col-md-4 profilebox">
        This is where the newsfeed goes
      </div>

  </div>
</div>
